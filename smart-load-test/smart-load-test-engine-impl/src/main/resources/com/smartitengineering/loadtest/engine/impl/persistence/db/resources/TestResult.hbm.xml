<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="com.smartitengineering.loadtest.engine.result.TestResult"
        table="test_result"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <id
            name="id"
            column="id"
            type="java.lang.Integer"
            length="11"
        >
            <generator class = "increment">
            </generator>
        </id>
        <version name="version" column="version" />
        <property
            name="testName"
            column="test_name"
            type="java.lang.String"
            length="255"
        />
        <property
            name="endDateTime"
            column="end_time"
            type="java.util.Date"
        />
        <property
            name="startDateTime"
            column="start_time"
            type="java.util.Date"
        />
        <property name="longId" column="long_id" type="java.lang.Long" />
        <set name="testCaseRunResults" lazy="false" outer-join="true" inverse="false" cascade="all">
            <key column="test_result_id" />
            <one-to-many class="com.smartitengineering.loadtest.engine.result.TestCaseResult" />
        </set>
        <set name="otherInfomations" table="test_result_extra_info" lazy="false" outer-join="true" cascade="all">
            <key column="test_result_id" />
            <composite-element class="com.smartitengineering.loadtest.engine.result.KeyedInformation">
                <property name="key" />
                <property name="value" />
            </composite-element>
        </set>
    </class>
</hibernate-mapping>
