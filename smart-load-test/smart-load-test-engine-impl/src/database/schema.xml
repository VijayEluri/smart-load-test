<!DOCTYPE database SYSTEM "http://db.apache.org/torque/dtd/database.dtd">
<database name="smart_load_test">
    <table name="test_result">
        <column name="id"
            type="INTEGER"
            primaryKey="true"
            required="true"/>
        <column name="version"
            type="INTEGER"
            required="true"/>
        <column name="long_id"
            type="BIGINT"
            required="true"/>
        <column name="test_name"
            type="VARCHAR"
            size="255"
            required="true"/>
        <column name="start_time"
            type="TIMESTAMP"
            required="false"/>
        <column name="end_time"
            type="TIMESTAMP"
            required="false"/>
    </table>
    <table name="test_result_extra_info">
        <column name="test_result_id"
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="key_col"    
            type="VARCHAR"
            size="255"
            required="true"
            primaryKey="true"/>
        <column name="value"
            type="VARCHAR"
            size="255"
            required="true" />
        <foreign-key foreignTable="test_result" name="test_result_keys" onDelete="cascade" onUpdate="cascade">
            <reference local="test_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_result">
        <column name="id"
            type="INTEGER"
            primaryKey="true"
            required="true"/>
        <column name="version"
            type="INTEGER"
            required="true"/>
        <column name="test_case_name"
            type="VARCHAR"
            size="255"
            required="true"/>
        <column name="step_count"
            type="INTEGER"
            required="false"/>
        <column name="step_size"
            type="INTEGER"
            required="false"/>
        <column name="instance_factory_class_name"
            type="VARCHAR"
            size="255"
            required="false"/>
        <column name="step_delay_config"
            type="VARCHAR"
            size="255"
            required="false"/>
        <column name="test_result_id"
            type="INTEGER"
            required="false"/>
        <foreign-key foreignTable="test_result" name="test_result_refs" onDelete="cascade" onUpdate="cascade">
            <reference local="test_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_result_extra_info">
        <column name="test_case_result_id"
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="key_col"    
            type="VARCHAR"
            size="255"
            required="true"
            primaryKey="true"/>
        <column name="value"
            type="VARCHAR"
            size="255"
            required="true" />
        <foreign-key foreignTable="test_case_result" name="test_case_result_keys" onDelete="cascade" onUpdate="cascade">
            <reference local="test_case_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_result_properties">
        <column name="test_case_result_id"
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="key_col"    
            type="VARCHAR"
            size="255"
            required="true"
            primaryKey="true"/>
        <column name="value"
            type="VARCHAR"
            size="255"
            required="true" />
        <foreign-key foreignTable="test_case_result" name="test_case_result_props" onDelete="cascade" onUpdate="cascade">
            <reference local="test_case_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_result_step_config">
        <column name="test_case_result_id"
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="step_number"    
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="delay_in_millis"    
            type="INTEGER"
            required="true"/>
        <column name="step_size"
            type="INTEGER"
            required="true" />
        <foreign-key foreignTable="test_case_result" name="test_case_result_step_configs" onDelete="cascade" onUpdate="cascade">
            <reference local="test_case_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_instance_result">
        <column name="id"
            type="INTEGER"
            primaryKey="true"
            required="true"/>
        <column name="version"
            type="INTEGER"
            required="true"/>
        <column name="end_state"
            type="VARCHAR"
            size="100"
            required="false"/>
        <column name="instance_number"
            type="INTEGER"
            required="false"/>
        <column name="start_time"
            type="TIMESTAMP"
            required="false"/>
        <column name="end_time"
            type="TIMESTAMP"
            required="false"/>
        <column name="test_case_result_id"
            type="INTEGER"
            required="false"/>
        <foreign-key foreignTable="test_case_result" name="test_case_result_ref" onDelete="cascade" onUpdate="cascade">
            <reference local="test_case_result_id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="test_case_instance_result_extra_info">
        <column name="test_case_instance_result_id"
            type="INTEGER"
            required="true"
            primaryKey="true"/>
        <column name="key_col"    
            type="VARCHAR"
            size="255"
            required="true"
            primaryKey="true"/>
        <column name="value"
            type="VARCHAR"
            size="255"
            required="true" />
        <foreign-key foreignTable="test_case_instance_result" name="test_case_instance_result_keys" onDelete="cascade" onUpdate="cascade">
            <reference local="test_case_instance_result_id" foreign="id"/>
        </foreign-key>
    </table>
</database>
